<Page x:Class="Projet_CS.Vue.AfficherChoixEtude"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projet_CS.Vue"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AfficherChoixEtude">

    <Grid>
        <Label Content="Etude choisie :" Margin="200,150,0,0"></Label>
        <ComboBox x:Name="etudeComboBox" ItemsSource="{Binding}" HorizontalAlignment="Left" 
                    Margin="200,196,0,222" Width="400"
                    BorderBrush="Black"
                    Background="#FFA4A4A4">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding nomEtudeProperty}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="btnSuivant" Content="Suivant" Click="pageSuivante" Height="35" Margin="306,267,330,148" Width="164" RenderTransformOrigin="0.5,2.31"/>
    </Grid>
</Page>
